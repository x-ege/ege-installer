  <script language="JScript">
    // ========== Polyfills (IE7/8 兼容) ==========
    // String.prototype.trim - IE8 及以下不支持
    if (!String.prototype.trim) {
      String.prototype.trim = function () {
        return this.replace(/^\s+|\s+$/g, '');
      };
    }

    // ========== 日志系统 ==========
    // 仅在 %TEMP%\.ege-debug 标志文件存在时启用详细日志
    // 出错时始终写入日志，便于排查问题
    var logFilePath = "";
    var debugMode = false;

    function writeLog(message) {
      var fsoW, fileW;
      try {
        if (!logFilePath) { return; }
        fsoW = new ActiveXObject("Scripting.FileSystemObject");
        var d = new Date();
        var ts = d.getHours() + ':' + (d.getMinutes() < 10 ? '0' : '') + d.getMinutes() + ':' + (d.getSeconds() < 10 ? '0' : '') + d.getSeconds();
        if (fsoW.FileExists(logFilePath)) {
          fileW = fsoW.OpenTextFile(logFilePath, 8, false);
        } else {
          fileW = fsoW.CreateTextFile(logFilePath, false, false);
        }
        fileW.WriteLine("[" + ts + "] " + message);
        fileW.Close();
      } catch (e) {
        // 静默失败
      }
    }

    // 初始化日志系统
    try {
      var _initFso = new ActiveXObject("Scripting.FileSystemObject");
      var _tempDir = new ActiveXObject("WScript.Shell").ExpandEnvironmentStrings("%TEMP%");
      logFilePath = _tempDir + "\\ege_installer_log.txt";
      debugMode = _initFso.FileExists(_tempDir + "\\.ege-debug");
      if (debugMode) {
        if (_initFso.FileExists(logFilePath)) { _initFso.DeleteFile(logFilePath); }
        writeLog("EGE Installer Started - " + navigator.userAgent);
      }
    } catch (e) { }

    // 全局错误处理
    window.onerror = function (msg, url, line) {
      writeLog("ERROR: " + msg + " at line " + line);
      var errMsg = '脚本错误:\n' + msg + '\n行号: ' + line;
      if (debugMode) { errMsg += '\n\n日志已保存到:\n' + logFilePath; }
      alert(errMsg);
      return true;
    };

    // 基础变量
    var fso, shell, currentPath, libsPath, egeVersion;
    var detectedIDEs = [];
    var notFoundIDEs = [];
    var notFoundExpanded = false;
    var dryRunMode = false;  // Dry-run 模式标志

    // 初始化
    try {
      fso = new ActiveXObject("Scripting.FileSystemObject");
      shell = new ActiveXObject("WScript.Shell");

      var htaPath = document.location.pathname;
      if (htaPath.charAt(0) === '/') {
        htaPath = htaPath.substr(1);
      }
      htaPath = htaPath.replace(/\//g, '\\');
      currentPath = fso.GetParentFolderName(htaPath);

      // 检测 EGE 库路径：支持打包环境和开发环境
      // 打包环境：<project_root>/libs
      // 开发环境：<parent_of_project>/xege_libs
      var projectRoot = fso.GetParentFolderName(currentPath);
      var devLibsPath = projectRoot + '\\libs';

      if (fso.FolderExists(devLibsPath)) {
        // 打包后的路径
        libsPath = devLibsPath;
      } else {
        // 开发环境：尝试在项目父目录查找 xege_libs
        var grandParentDir = fso.GetParentFolderName(projectRoot);
        var xegeLibsPath = grandParentDir + '\\xege_libs';
        if (fso.FolderExists(xegeLibsPath)) {
          libsPath = xegeLibsPath;
        } else {
          // 也尝试 xege-libs（带连字符）
          var xegeLibsPath2 = grandParentDir + '\\xege-libs';
          if (fso.FolderExists(xegeLibsPath2)) {
            libsPath = xegeLibsPath2;
          } else {
            // 留空，让 installer.js 自行探测
            libsPath = '';
          }
        }
      }

      // 检测 dry-run 模式（开发调试用）
      // 标志文件位置：项目根目录/temp/.dry-run
      var dryRunFlagFile = projectRoot + '\\temp\\.dry-run';
      if (fso.FileExists(dryRunFlagFile)) {
        dryRunMode = true;
      }

      // 读取版本号（从 version.txt 读取 EGE 库版本）
      // 优先尝试打包后的位置，如果不存在则尝试开发环境位置
      var projectRoot = fso.GetParentFolderName(currentPath);
      var versionFile = projectRoot + '\\version.txt';

      // 如果打包位置不存在，尝试开发环境位置
      if (!fso.FileExists(versionFile)) {
        var parentDir = fso.GetParentFolderName(projectRoot);
        versionFile = parentDir + '\\xege_libs\\version.txt';
      }

      if (fso.FileExists(versionFile)) {
        var ts = fso.OpenTextFile(versionFile, 1);
        var content = ts.ReadAll();
        ts.Close();
        // 移除可能的BOM字符 (\uFEFF 或 \xEF\xBB\xBF)
        if (content.charCodeAt(0) === 0xFEFF || content.charCodeAt(0) === 0xEF) {
          content = content.substring(1);
        }
        // 提取版本号：支持两种格式 "Version: x.x.x" 或纯版本号 "x.x.x"
        var match = content.match(/(?:Version:\s*)?([0-9]+[0-9.\-a-zA-Z]*)/i);
        egeVersion = match ? match[1].trim() : '';
      } else {
        egeVersion = '1.0.0';
      }
      if (!egeVersion || egeVersion.length === 0) {
        egeVersion = '1.0.0';
      }

      // 更新标题和版本显示
      document.getElementById('appTitle').innerText = 'EGE 图形库安装程序';
      document.getElementById('versionBadge').innerText = 'v' + egeVersion;
      document.title = 'EGE 图形库安装程序 v' + egeVersion;

      // 如果是 dry-run 模式，更新 UI 提示
      if (dryRunMode) {
        document.getElementById('appTitle').innerText = 'EGE 图形库安装程序 [DRY-RUN 模式]';
        document.getElementById('versionBadge').innerText = 'v' + egeVersion + ' (DRY-RUN)';
        document.getElementById('versionBadge').style.background = '#f59e0b';
        document.title = 'EGE 图形库安装程序 v' + egeVersion + ' [DRY-RUN]';
        // 设置 Installer 的 dry-run 模式
        // 注意：Installer 对象在下面的 script 标签中加载，需要延迟设置
      }

    } catch (e) {
      writeLog("Initialization error: " + e.message);
      var initErrMsg = '初始化错误: ' + e.message;
      if (debugMode) { initErrMsg += '\n\n详细日志已保存到:\n' + logFilePath; }
      alert(initErrMsg);
    }

    // 用默认浏览器打开 URL
    function openUrl(url) {
      try {
        shell.Run(url, 1);
      } catch (e) {
        alert('无法打开链接: ' + e.message);
      }
    }
  </script>

